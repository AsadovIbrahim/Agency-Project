@model List<Portfolio>

@{
    var count = 0;
}

<div class="container">
    <a asp-action="Create" class="btn btn-primary">Create</a>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Title</th>
                <th scope="col">Subtitle</th>
                <th scope="col">Photo</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                count++;
                <tr>
                    <td>@count</td>
                    <td>@item.Title</td>
                    <td>@item.Description</td>
                    <td>
                        <div style="width:100px">
                            <img width="100%" src="\Upload\manage\@item.ImgUrl">
                        </div>
                    </td>

                    <td>
                        <a asp-action="Update" class="btn btn-secondary" asp-route-id="@item.Id">Update</a>
                        <a asp-action="Remove" class="btn btn-danger" asp-route-id="@item.Id">Remove</a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>